{
  "manifest_version": 2,

  "name": "One-click Kittens",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://www.pandora.com/*"],
      "js": ["jquery.js", "myscript.js"]
    }
  ],

  "permissions": [
    "tabs", "http://www.pandora.com/*"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  }
}